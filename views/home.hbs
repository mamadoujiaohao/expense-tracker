<div class="container position-relative mt-5 text-center" >
    <!--新增支出-->
    <div class="add-btn mb-5">
      <a href="/expense/new" class="btn btn-lg btn-outline-primary mt-5">新增支出</a>
    </div>
    <!--排序dropdown button-->
    <div class="d-flex flex-column flex-sm-row align-items-sm-center gap-2 mx-auto" style="width:600px;">  
        <div class="input-group">
        <select class="form-select rounded-0" id="sort" name="sort">
            <option>類別</option>
            <option>價格</option>
            <option>名稱</option>
            <option>時間</option>
        </select>
        </div>
    </div>
    <!--總金額-標題-->
    <div class="container d-flex flex-column flex-sm-row align-items-sm-center gap-2 mx-auto mt-5 rounded-0" style="width:600px;" >
        <P><h4>總金額:</h4></P>
    </div>
    <!--總金額-數字-->
    <div class="container d-flex flex-column flex-sm-row align-items-sm-center gap-2 mx-auto my-0 rounded-0" style="width:600px;" >
        <P class="col align-self-end"><h1>{{totalAmount}} 元</h1></P>
    </div>
    <!--支出項目-->
    <ul class="record-list list-group list-group-light  text-center" style="width: 700px">
    {{#each expenses}}
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <div class="d-flex align-items-center">
        <div class="ms-3">
          <div class="col-1 text-center">
            <h2 class="record-category-icon "><i class="fa-2x {{this.icon}} "></i></h2>
          </div>
          <h4 class="expense-name fw-bold mb-1">{{ this.name }}</h4>
          <h5 class="expense-name fw-bold mb-1">${{ this.amount }}</h5>
          <p class="expense-date text-muted mb-0">{{ this.date }}</p>
        </div>
      </div>
      <div class="d-flex justify-content-end">
        <form action="./expense/{{ this._id }}/edit">
          <button type="submit" class="btn btn-lg btn-outline-primary mt-5">修改</button>
        </form>
        <form action="./expense/{{ this._id }}?_method=DELETE" method="POST">
          <button type="submit" class="btn btn-lg btn-outline-primary mt-5">刪除</button>
        </form>
      </div>
    </li>
    {{/each}}
  </ul>
  
</div>  